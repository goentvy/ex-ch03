<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.entvy.todolist.mapper.TodoMapper">
    <select id="findAll" resultType="Todo">
        SELECT * FROM todos
    </select>

    <insert id="insert" parameterType="Todo">
        INSERT INTO todos (title, completed) VALUES (#{title}, #{completed})
    </insert>

    <update id="update" parameterType="Todo">
        UPDATE todos SET title=#{title}, completed=#{completed}
    </update>

    <delete id="delete" parameterType="Todo">
        DELETE FROM todos WHERE id=#{id}
    </delete>
</mapper>